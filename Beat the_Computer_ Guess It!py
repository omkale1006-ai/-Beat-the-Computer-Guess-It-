import random  # ğŸ² Importing the random module

# ğŸ¯ Generating a random number between 1 and 10
secret_number = random.randint(1, 10)

# ğŸ§  Main function to run the guessing game
while True:
    def main():
        print("ğŸ‰ Welcome to the Number Guessing Game!")
        print("ğŸ”¢ I'm thinking of a number between 1 and 10.")
        
        try:
            # ğŸ‘‰ Taking input from the user and converting to integer
            user_guess = int(input("ğŸ¤” Enter your guess: "))
            
            # âœ… Comparing user's guess with the secret number
            if user_guess == secret_number:
                print("ğŸ¯ You guessed the correct number!")
                print("ğŸ† You win!")
            else:
                print("âŒ Your guess did not match.")
                print("ğŸ˜ You lose!")

            # ğŸ“Š Showing both numbers
            print(f"ğŸ‘¤ Your guess: {user_guess}")
            print(f"ğŸ’» Computer's number: {secret_number}")

        except ValueError:
            print("âš ï¸ Please enter a valid number (1 to 10).")

# â–¶ï¸ Calling the main function to start the game
